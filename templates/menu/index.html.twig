{% extends 'base.html.twig' %}

{% block title %}Menus - Quai Antique{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-3 pt-4">
            <h3>Filtrer</h3>
            {{ form(form) }}
        </div>
        <div class="col-md-9">
            <h3 class="text-center">Nos produits</h3>

            <div class="row menu-container">
                {% for menu in menus %}
                    <div class="col-md-4 menu-container">
                        <div class="menu-item text-center">
                            <a href="{{ path('nos-menus', { 'slug' : menu.slug }) }}"><img src="/uploads/{{ menu.illustration }}" alt="{{ menu.name }}" class="img-fluid"></a>
                            <h5>{{ menu.name }}</h5>
                            <span class="menu-subtitle">{{ menu.subtitle }}</span>
                            <span class="menu-price">{{ (menu.price / 100)|number_format(2, ',', '.') }} â‚¬</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
            {% endblock %}
